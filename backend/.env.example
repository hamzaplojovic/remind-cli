# Backend API configuration

# OpenAI API key (required)
REMIND_OPENAI_API_KEY=sk-your-api-key-here

# OpenAI model (default: gpt-5-nano)
REMIND_OPENAI_MODEL=gpt-5-nano

# Database URL (default: sqlite:///./backend.db)
REMIND_DATABASE_URL=sqlite:///./backend.db

# Server settings
REMIND_HOST=0.0.0.0
REMIND_PORT=8000
REMIND_DEBUG=false

# Rate limiting (requests per window)
REMIND_RATE_LIMIT_REQUESTS=10
REMIND_RATE_LIMIT_WINDOW_SECONDS=60

# Paddle payment processing
REMIND_PADDLE_API_KEY=your-paddle-api-key
REMIND_PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret

# Paddle product IDs (from Paddle dashboard)
# Set these after creating products in Paddle
REMIND_PADDLE_PRODUCT_INDIE=prod_indie_123
REMIND_PADDLE_PRODUCT_PRO=prod_pro_456
REMIND_PADDLE_PRODUCT_TEAM=prod_team_789

# Email configuration (for sending license tokens)
# Gmail example: use an app-specific password, not your regular password
REMIND_SMTP_HOST=smtp.gmail.com
REMIND_SMTP_PORT=587
REMIND_SMTP_USER=your-email@gmail.com
REMIND_SMTP_PASSWORD=your-app-password
REMIND_SMTP_FROM_EMAIL=noreply@remind.dev
