# ============================================================================
# Remind CLI Configuration
# Store this in: ~/.remind/config.toml (TOML format, not .env)
# ============================================================================

# Timezone for reminder scheduling
timezone = "US/Eastern"

# How often to check if reminders are due (in minutes)
scheduler_interval_minutes = 1

# Enable/disable desktop notifications
notifications_enabled = true
notification_sound_enabled = true

# Enable AI-powered suggestion for reminders
ai_rephrasing_enabled = true

# Backend API URL (required for AI features)
# Point this to your deployed backend
ai_backend_url = "https://api.remind.dev"

# Escalating nudge intervals (in minutes) until reminder is marked done
nudge_intervals_minutes = [5, 15, 60]

# ============================================================================
# EXAMPLE ~/.remind/config.toml:
# ============================================================================
# [remind]
# timezone = "US/Eastern"
# scheduler_interval_minutes = 1
# notifications_enabled = true
# notification_sound_enabled = true
# ai_rephrasing_enabled = true
# ai_backend_url = "https://your-railway-url.railway.app"
# nudge_intervals_minutes = [5, 15, 60]
